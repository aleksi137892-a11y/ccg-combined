# =============================================================================
# CCG Combined Platform - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env files to git

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
VITE_SUPABASE_PROJECT_ID="your-project-id"
VITE_SUPABASE_PUBLISHABLE_KEY="your-anon-key"
VITE_SUPABASE_URL="https://your-project.supabase.co"

# Service role key (only for edge functions, never expose to client)
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# -----------------------------------------------------------------------------
# Site Access Control
# -----------------------------------------------------------------------------
# Leave empty for public access, or set a password for staging
VITE_SITE_PASSWORD=""

# -----------------------------------------------------------------------------
# External APIs (Edge Functions)
# -----------------------------------------------------------------------------
# Lovable AI Gateway (for triage assistant)
LOVABLE_API_KEY=""

# Firecrawl (for web image search)
FIRECRAWL_API_KEY=""

# -----------------------------------------------------------------------------
# Domain Configuration
# -----------------------------------------------------------------------------
# Primary domains for CORS validation
VITE_PRIMARY_DOMAIN="https://sabcho.org"
VITE_IIMG_DOMAIN="https://iimg.sabcho.org"
